<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.CourseMapper">


<!-- 查询所有学生信息-->
  <select id="findCourseAll" resultType="com.briup.app02.bean.Course">
    select * from tbl_course
  </select>
  <!-- 按学号查找学生信息 -->
  <select id="findCourseById" parameterType="long" resultType="com.briup.app02.bean.Course">
    select * from tbl_course where id=#{id}
  </select>
  
  
  
 
  <insert id="insertCourse" parameterType="com.briup.app02.bean.Course">
  insert into tbl_course
  values (#{id},#{courseName},#{courseCredits})
</insert>



<update id="updateCourse" parameterType="com.briup.app02.bean.Course">
  update tbl_course set
    courseName = #{courseName},
    courseCredits = #{courseCredits}
    
  where id = #{id}
</update>


<delete id="delete" parameterType="long">
  delete from tbl_course where id = #{id}
</delete>




</mapper>