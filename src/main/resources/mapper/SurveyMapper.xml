<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.SurveyMapper">



  <select id="findSurveyAll" resultType="com.briup.app02.bean.Survey">
    select * from poll_survey
  </select>

  <select id="findSurveyById" parameterType="long" resultType="com.briup.app02.bean.Survey">
    select * from poll_survey where id=#{id}
  </select>
  
  
  

  <insert id="saveSurvey" parameterType="com.briup.app02.bean.Survey">
  insert into poll_survey 	
  values (#{id},#{state},#{average},#{surveydate},#{questionnaire_id},#{user_id},#{clazz_id},#{course_id})
</insert>



<update id="updateSurvey" parameterType="com.briup.app02.bean.Survey">
  update poll_survey set
    state = #{state},
    average = #{average},
    surveydate = #{surveydate},
    questionnaire_id =#{questionnaire_id},
    user_id =#{user_id},
    clazz_id =#{clazz_id},
    course_id =#{course_id}
    
  where id = #{id}
</update>


<delete id="deleteSurvey" parameterType="long">
  delete from poll_survey where id = #{id}
</delete>




</mapper>